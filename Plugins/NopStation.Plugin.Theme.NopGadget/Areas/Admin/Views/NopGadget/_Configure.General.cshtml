    <div class="form-group row">
        <div class="col-md-3">
            <nop-override-store-checkbox asp-for="NewsLetterSideImageId_OverrideForStore" asp-input="NewsLetterSideImageId" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <nop-label asp-for="NewsLetterSideImageId" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="NewsLetterSideImageId" />
