@model ConfigurationModel

<div class="card-body">
    <div class="form-group row">
        <div class="col-md-3">
            <nop-override-store-checkbox asp-for="PhoneNumber_OverrideForStore" asp-input="PhoneNumber" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <nop-label asp-for="PhoneNumber" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="PhoneNumber" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-override-store-checkbox asp-for="LinkedInLink_OverrideForStore" asp-input="LinkedInLink" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <nop-label asp-for="LinkedInLink" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="LinkedInLink" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-override-store-checkbox asp-for="PinterestLink_OverrideForStore" asp-input="PinterestLink" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <nop-label asp-for="PinterestLink" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="PinterestLink" />
        </div>
    </div>

    @(await Html.LocalizedEditorAsync<ConfigurationModel, ConfigurationLocalizedModel>("contact-us-settings-localized",
        @<div>
        <div class="form-group row">
            <div class="col-md-3">
                <nop-override-store-checkbox asp-for="FooterContactUsText_OverrideForStore" asp-input="@Model.Locales[item].FooterContactUsText" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                <nop-label asp-for="@Model.Locales[item].FooterContactUsText" />
            </div>
            <div class="col-md-9">
                <nop-editor asp-for="@Model.Locales[item].FooterContactUsText" />
            </div>
        </div>
        <input type="hidden" asp-for="@Model.Locales[item].LanguageId" />
    </div>
        ,
        @<div>
        <div class="form-group row">
            <div class="col-md-3">
                <nop-override-store-checkbox asp-for="FooterContactUsText_OverrideForStore" asp-input="FooterContactUsText" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                <nop-label asp-for="FooterContactUsText" />
            </div>
            <div class="col-md-9">
                <nop-editor asp-for="FooterContactUsText" asp-template="RichEditor" />
            </div>
        </div>
    </div>
        ,
        //localizable settings per store (overridden store settings) are not supported yet
        true
        ))
    <div class="form-group row">
        <div class="col-md-3">
            <nop-override-store-checkbox asp-for="HideDesignedByNopStationAtFooter_OverrideForStore" asp-input="HideDesignedByNopStationAtFooter" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <nop-label asp-for="HideDesignedByNopStationAtFooter" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="HideDesignedByNopStationAtFooter" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-override-store-checkbox asp-for="ShowLogoAtFooter_OverrideForStore" asp-input="ShowLogoAtFooter" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <nop-label asp-for="ShowLogoAtFooter" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="ShowLogoAtFooter" />
        </div>
    </div>
    <nop-nested-setting asp-for="ShowLogoAtFooter">
        <div class="form-group row">
            <div class="col-md-3">
                <nop-override-store-checkbox asp-for="FooterLogoPictureId_OverrideForStore" asp-input="FooterLogoPictureId" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                <nop-label asp-for="FooterLogoPictureId" />
            </div>
            <div class="col-md-9">
                <nop-editor asp-for="FooterLogoPictureId" />
            </div>
        </div>
    </nop-nested-setting>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-override-store-checkbox asp-for="ShowSupportedCardsAtFooter_OverrideForStore" asp-input="ShowSupportedCardsAtFooter" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <nop-label asp-for="ShowSupportedCardsAtFooter" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="ShowSupportedCardsAtFooter" />
        </div>
    </div>
    <nop-nested-setting asp-for="ShowSupportedCardsAtFooter">
        <div class="form-group row">
            <div class="col-md-3">
                <nop-override-store-checkbox asp-for="FooterSupportedCardsPictureId_OverrideForStore" asp-input="FooterSupportedCardsPictureId" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                <nop-label asp-for="FooterSupportedCardsPictureId" />
            </div>
            <div class="col-md-9">
                <nop-editor asp-for="FooterSupportedCardsPictureId" />
            </div>
        </div>
    </nop-nested-setting>

    <div class="form-group row">
        <div class="col-md-3">
